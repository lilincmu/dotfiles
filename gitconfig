[alias]
	st = status
	ci = commit -m
	co = checkout
	br = branch
	pl = pull
	dh = diff HEAD~
	cp = cherry-pick
	aa = add --all :/
	rsh = reset --soft HEAD^
	pom = push origin master
	com = checkout master
	au = !"git ls-files -om | xargs git add"
	unstage = restore --staged
[pull]
	rebase = true
[core]
	excludesfile = ~/.gitignore_global

# Allow local customizations in the .gitconfig_local file
[include]
	path = ~/.gitconfig_local
[fetch]
	prune = true
