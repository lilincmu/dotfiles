[alias]
	st = status
	ci = commit -m
	br = branch
	co = checkout
	rsh = reset --soft HEAD^
	pom = push origin master
	com = checkout master
	cp = cherry-pick
	pl = pull
	au = !"git ls-files -om | xargs git add"
	unstage = restore --staged
[pull]
	rebase = true
[core]
	excludesfile = ~/.gitignore_global

# Allow local customizations in the .gitconfig_local file
[include]
	path = ~/.gitconfig_local
